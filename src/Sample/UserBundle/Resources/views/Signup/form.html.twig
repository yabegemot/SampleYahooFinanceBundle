{% extends 'base.html.twig' %}
{% block body %}
       <!-- Fixed navbar -->
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <div class="small-logo-container">
            <a class="small-logo" href="#">↥Small Logo</a>
          </div>
        </div>
        <div class="navbar-collapse collapse">
          
          <ul class="nav navbar-nav navbar-right">
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>

    <div class="container-fluid big-logo-row">
      <div class="container">
        <div class="row">
          <div class="col-xs-12 big-logo-container">
            <h1 class="big-logo">↧Big Logo</h1>
          </div><!--/.col-xs-12 -->
        </div><!--/.row -->
      </div><!--/.container -->
    </div><!--/.container-fluid -->

    <div class="container">
      <div class="row">
        <div class="col-lg-5 col-md-6 col-sm-8 col-lg-8">
            <h1>{% trans %}Sign Up:{% endtrans %}</h1>
            {{ form_start(form, {'attr': {'id': 'signup-form', 'class' : 'form-horizontal validate-form', 'role' : 'form' } }) }}
            <div class="form-group">
                {{form_label(form.first_name, null, {'label_attr': {'class': 'col-lg-4 control-label'}})}}
                <div class="col-lg-8">
                    {{form_widget(form.first_name, {'attr': {'class': ' form-control'}})}}
                    {{form_errors(form.first_name)}}
                </div>
            </div>
            <div class="form-group">
                {{form_label(form.last_name, null, {'label_attr': {'class': 'col-lg-4 control-label'}})}}
                <div class="col-lg-8">
                    {{form_widget(form.last_name, {'attr': {'class': ' form-control'}})}}
                    {{form_errors(form.last_name)}}
                </div>
            </div>
            <div class="form-group">
                {{form_label(form.title, null, {'label_attr': {'class': 'col-lg-4 control-label'}})}}
                <div class="col-lg-8">
                    {{form_widget(form.title, {'attr': {'class': ' form-control'}})}}
                    {{form_errors(form.title)}}
                </div>
            </div>
            <div class="form-group">
                {{form_label(form.email, null, {'label_attr': {'class': 'col-lg-4 control-label'}})}}
                <div class="col-lg-8">
                    {{form_widget(form.email, {'attr': {'class': ' form-control'}})}}
                    {{form_errors(form.email)}}
                </div>
            </div>
            <div class="form-group">
                {{form_label(form.phone, null, {'label_attr': {'class': 'col-lg-4 control-label'}})}}
                <div class="col-lg-8">
                    {{form_widget(form.phone, {'attr': {'class': ' form-control'}})}}
                    {{form_errors(form.phone)}}
                </div>
            </div>
            <div class="form-group">
                {{form_label(form.mobile, null, {'label_attr': {'class': 'col-lg-4 control-label'}})}}
                <div class="col-lg-8">
                    {{form_widget(form.mobile, {'attr': {'class': ' form-control'}})}}
                    {{form_errors(form.mobile)}}
                </div>
            </div>
            <div class="form-group">
                {{form_label(form.username, null, {'label_attr': {'class': 'col-lg-4 control-label'}})}}
                <div class="col-lg-8">
                    {{form_widget(form.username, {'attr': {'class': ' form-control'}})}}
                    {{form_errors(form.username)}}
                </div>
            </div>
            <div class="form-group">
                {{form_label(form.password.first, null, {'label_attr': {'class': 'col-lg-4 control-label'}})}}
                <div class="col-lg-8">
                    {{form_widget(form.password.first, {'attr': {'class': ' form-control'}})}}
                    {{form_errors(form.password.first)}}
                </div>
            </div>
            <div class="form-group">
                {{form_label(form.password.second, null, {'label_attr': {'class': 'col-lg-4 control-label'}})}}
                <div class="col-lg-8">
                    {{form_widget(form.password.second, {'attr': {'class': ' form-control'}})}}
                    {{form_errors(form.password.second)}}
                </div>
            </div>
            
                <div class="form-group" style="text-align: right;">
                {{ form_end(form) }}
            </div>
      </div><!--/.row -->
    </div><!--/.container -->
    <br>
    <br>
    <br>
    <br>
{% endblock %}